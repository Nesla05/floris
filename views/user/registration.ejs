<%- include('../layout/header.ejs') %>



<section class="bg-dark">
  <div class="container py-3 ">
    <div class="row d-flex justify-content-center align-items-center ">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row ">
            <!-- <div class="col-xl-6 d-none d-xl-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                alt="Sample photo" class="img-fluid"
                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
            </div> -->
            <div class="">
              <div class="card-body p-md-5 text-black">
                <form class="mx-1 mx-md-4 text-black rounded" action="/register" method="post">

                <h3 class="mb-5 text-uppercase">Sign Up</h3>

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label class="form-label" for="form3Example1m">Name</label>
                      <input type="text" id="form3Example1m" class="form-control form-control-lg" name="name" />
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label class="form-label" for="form3Example1m1">Mobile</label>
                      <input type="text" id="form3Example1m1" class="form-control form-control-lg" name="mobile" />
                    </div>
                  </div>
                </div>
                 
                  <div class=" form-outline mb-4">
                    <div class="form-outline">
                      <label class="form-label" for="form3Example1n">Email</label>
                      <input type="email" id="form3Example1n" class="form-control form-control-lg" name="email" />
                    </div>
                  </div>
                 

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label class="form-label" for="form3Example1n1">Password</label>
                      <input type="password" id="form3Example1n1" class="form-control form-control-lg" name="password" />
                    </div>
                  </div>
               <div  class="col-md-6 mb-4">
                <label class="form-label" for="form3Example8">Confirm Password</label>
                  <input type="password" id="form3Example8" class="form-control form-control-lg" name="confirmPassword" />
                </div>
              </div>
               
               <div class="d-flex justify-content-end pt-3">
                  <!-- <button type="button" class="btn btn-light btn-lg">Reset all</button> -->
                  <button type="submit" class="btn  btn-block btn-sm text-body font-weight-bold">Register</button>
                  
                </div>

                <p style="color: rgb(198, 4, 4); font-weight: bold;" class="text-center">
                  <%=(typeof message!=='undefined')?message:""%>
                </p>
                <p class="text-center small mt-5 mb-0">Have already an account? <a href="/login" class="fw-bold text-body"><u>Login here</u></a></p>
                <br>
              </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>





