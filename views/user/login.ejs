<%- include('../layout/header.ejs') %>

<style>

  section{
    background-image: url(images/log.jpg);
    background-size: cover;
  }

  .card{
    background-color: rgba(240, 248, 255, 0.537);
    
  }
.button{
  background-image: linear-gradient(to right, #fbc2eb 0%, #a6c1ee 51%, #fbc2eb 100%);
  margin: 10px;
            /* padding: 15px 45px; */
            text-align: center;
            text-transform: uppercase;
            transition: 0.5s;
            background-size: 200% auto;
            /* color: white;             */
            /* box-shadow: 0 0 20px #eee; */
            border-radius: 10px;
            display: block;
          }

          .button:hover {
            background-position: right center; /* change the direction of the change here */
            /* color: #fff; */
            text-decoration: none;
          }

  


</style>


<section class="vh-100 bg-image">
  
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card border border-secondary" style="border-radius: 15px; ">
            <div class="card-body p-5">
              <h2 class="login text-uppercase text-center mb-5" style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">LOGIN</h2>

              <form action="/login" method="post">

               

                <div class="form-outline mb-4">
                  <label class="form-label" for="form3Example3cg">Email</label>
                  <input type="email" id="form3Example3cg" class="form-control form-control-lg" placeholder="Enter Your Email" style="font-size: 15px ;font-family: Verdana, Geneva, Tahoma, sans-serif;" name="email" />
                </div>

                <div class="form-outline mb-4">
                  <label class="form-label" for="form3Example1cg">Password</label>
                  <input type="password" id="form3Example1cg" class="form-control form-control-lg" placeholder="Enter Your Password" style="font-size: 15px ;font-family: Verdana, Geneva, Tahoma, sans-serif;" name="password"/>
                  
                </div>
              
                <div class="button d-flex justify-content-center">
                  <button type="submit"
                    class="btn btn-block btn-lg ">Login</button>
                </div>
                <p class="text-muted  mb-0"><a href="/forgot"
                  class="fw-bold text-body"><u>Forgot Password ?</u></a></p>
                  <p style="color: rgb(198, 4, 4); font-weight: bold;" class="text-center">
                    <%=(typeof message!=='undefined')?message:""%>
                  </p>
                <p class="text-center text-muted mt-5 mb-0">Dont have an acoount ?<a href="/register"
                    class="fw-bold text-body"><u>Register</u></a></p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

