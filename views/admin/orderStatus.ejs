<%- include('../layout/adminHeader.ejs') %>

<div class="container-fluid pt-4 px-4">
                
    <div class="row g-4">
        <div class="col-12">
            
            <div class=" rounded h-100 p-4" id="sales" style="background-color: rgb(255, 243, 253);">
                <h6 class="mb-4">Order Details</h6>
            
                <div class="table-responsive" >
                    <table id="orderTable" class="table">
                        <thead>
                            <tr>
                                <th scope="col">No:</th>
                                <th scope="col">Order Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">date</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">stock</th>
                                <th scope="col">total</th>
                                <!-- <th scope="col">Image</th> -->
                                <th scope="col">status</th>
                                <th scope="col">Details</th>
                                <th scope="col">Action</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                           
                            <% order_data.forEach(function(orders,index) { %>
                            <tr >
                                <td><%= index+1 %></td>
                                <td><%= orders.user.id %></td>
                                <td><%= orders.user.name %></td>

                                <td><%= orders.createdAt.toLocaleDateString() %></td>

                               
                                <td >
                                    <div class="order_pro">
                                        <% orders.items.forEach((items) =>{ %>
                                            
                                            <ul>
                                                <li><%= items.product.name %></li>
                                            </ul>  
                                         <% }) %>
                                    </div>
                                </td>
                                     
                                <td>
                                    <% orders.items.forEach((items) =>{ %>
                                        <ul>
                                            <li style="list-style: none;"><%= items.stock %></li>
                                        </ul>
                                         
                                    <% }) %>
                                </td>
                                <td>
                                     â‚¹<%= orders.total%>
                                </td>
                                <!-- <td>
                                     orders.items.forEach((items) => { 
                                     console.log(orders.items.product.images) 

                                         if (items.images && items.images.length > 0) { 
                                          <img src="/uploads/ items.images[0] " class="img-thumbnail" width="40px" alt="kjhghfuf"><br>
                                        } 
                                       }) 
                                      
                                </td> -->
                                <td>
                                    <%= orders.status%>
                                </td>
                                    <div>
                                       <td>
                                        <a type="submit" href="/orderDetail?id=<%= orders._id %>"  class="btn border border-dark">Details</a>
                                    </div>
                                </td>
                                <td>
                                    <a href="" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-pencil-alt"></i>Update</a>
                                    <div class="dropdown-menu bg-transparent border-0">
                                        <form action="/orderUpdate?id=<%= orders._id %>" method="post">
                                            <select name="status">
                                                
                                                <option value="Pending" <% if (orders.status === 'Pending') { %>selected<% } %>>Pending</option>
                                                <option value="Shipped" <% if (orders.status === 'Shipped') { %>selected<% } %>>Shipped</option>
                                                <option value="Delivered" <% if (orders.status === 'delivered') { %>selected<% } %>>Delivered</option>
                                                <option value="cancelled" <% if (orders.status === 'cancelled') { %>selected<% } %>>Cancel</option>
                        
                                              </select>
                                              <button type="submit" class="btn btn-primary">Save changes</button>
                                        </form>
                                    </div>
                                </td>
                                <td>
                                    <%	if (orders.payment_method=="COD") {%> 
                                        <%	if (orders.status==="Returned") {%> 
                                    <div>
                                        <form action="/order_refund?id=<%= orders._id %>" method="post">
                                              <button type="submit" value="Refunded" class="btn btn-danger">Refund</button>
                                        </form>
                                    </div>
                                    <% } %>	
                                    <% }else if(orders.payment_method=="razorpay"||orders.payment_method=="wallet") { %>
                                        <%	if (orders.status==="cancelled"||orders.status==="Returned") {%> 
                                            <div>
                                                <form action="/order_refund?id=<%= orders._id %>" method="post">
                                                      <button type="submit" value="Refunded" class="btn btn-danger">Refund</button>
                                                </form>
                                            </div>
                                            <% } %>	
                                    <% } %>	
                                </td>
                              </tr>
                              <% }) %>
                
    
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- product End -->
